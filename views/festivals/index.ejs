<% include ../partials/header %>
    

    
    <div class ="container">
        <header class = "jumbotron">
            <div class="container">
                  <h1>Welcome to MusicFestCamp!</h1>
                    <p>View our hand-picked music festivals from all over the world!!</p>
                    <p>
                        <a class ="btn btn-primary btn-large" href="/festivals/new"> Add New Festival</a>    
                    </p>     
            </div>
        </header>
    
        <div class="row text-center" style = "display : flex ; flex-wrap : wrap">
            <% festivals.forEach(function(festival){ %>
            <div class ="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src = "<%= festival.image%>">
                   <div class ="caption">
                       <h4>
                           <%= festival.name %>
                       </h4>
                   </div>
                   <p>
                       <a href="/festivals/<%= festival._id %>" class ="btn btn-primary">More Info</a>
                   </p>
                </div>
                 
            </div>
           
            <% }); %>
        </div>
            
       
    </div>
        

<% include ../partials/footer %>
