<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style ="text-align :center">Add a new festival</h1>
       <div style ="width:30%; margin : 40px auto">
            
            <form action="/festivals" method = "POST">
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festName" placeholder = "Name"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festImg" placeholder = "URL">
                </div>
                <div class="form-group">
                    <input class="form-control" type ="number" name ="price" min ="0.01" step="0.01" placeholder = "Price">
                </div>
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festDescription" placeholder = "Description">
                </div>
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>
            </form>
            <a href="/festivals"> Go back!</a>
        </div>
       
    </div>
    
</div>

<% include ../partials/footer %>