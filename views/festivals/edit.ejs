<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style ="text-align :center">Edit <%=festival.name%></h1>
       <div style ="width:30%; margin : 40px auto">
            
            <form action="/festivals/<%=festival._id%>/?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festival[name]" value = "<%=festival.name%>"> 
                </div>
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festival[image]" value = "<%=festival.image%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type ="text" name ="festival[description]" value = "<%=festival.description%>">
                </div>
                <div class="form-group">
                    <button class= "btn btn-lg btn-primary btn-block">Submit!</button>    
                </div>
            </form>
            <a href="/festivals"> Go back!</a>
        </div>
       
    </div>
    
</div>

<% include ../partials/footer %>